{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.rubyschema.org/rorvswild.json",
  "title": "RoRvsWild configuration",
  "type": "object",
  "definitions": {
    "constant": {
      "type": "string",
      "pattern": "^(?:::)?[A-Z][a-zA-Z0-9_]*(?:::[A-Z][a-zA-Z0-9_]*)*$"
    },
    "environment": {
      "properties": {
        "api_key": {
          "type": "string"
        },
        "ignore_requests": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^(?:::)?[A-Z][a-zA-Z0-9_]*(?:::[A-Z][a-zA-Z0-9_]*)*#.+$"
          },
          "examples": [["HeartbeatController#show"]]
        },
        "ignore_jobs": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/constant"
          }
        },
        "ignore_exceptions": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/constant"
          }
        },
        "ignore_plugins": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": {
    "$ref": "#/definitions/environment"
  }
}
